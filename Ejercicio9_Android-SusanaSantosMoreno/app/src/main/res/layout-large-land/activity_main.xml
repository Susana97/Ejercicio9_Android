    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/FrgListado"
        android:name="com.example.susanasantosmoreno.ejercicio9_android.Fragment_Listado"
        class="com.example.susanasantosmoreno.ejercicio9_android.Fragment_Listado"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".30"
        tools:layout="@layout/fragment_listado" />

    <fragment
        android:id="@+id/FrgDetalle"
        android:name="com.example.susanasantosmoreno.ejercicio9_android.Fragment_Detalle"
